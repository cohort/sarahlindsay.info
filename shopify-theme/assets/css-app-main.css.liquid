            .shop-products {
                max-width:980px;
                margin:50px auto;
            }

            .shop-product {
                width:50%;
                max-width:480px;
                margin-bottom:30px;
            }

            @media (max-width:600px) {
                .shop-product {
                    width:100%;
                    max-width:inherit;
                }
            }

            @media (max-width:830px) {
                .menu-open .shop-product {
                    width:100%;
                    max-width:inherit;
                }
            }

            .shop-product p {
                letter-spacing:0.05em;
                margin:1em 10px;
            }

            .shop-product-view {
                color:#282828;
            }

            .shop-product-view:hover {
                color:#000;
            }

            .shop-product-img {
                display:block;
                position:relative;
                z-index:1;
                margin:0 10px;
            }

