/* page layout */

    /* wrapper */
        .wrapper {
            position:absolute;
            width:100%;
            height:100%;
            left:0;
            right:0;
            top:0;
            bottom:0;
            z-index:2;
            overflow:hidden;
            background:#f3f3f3;

            -webkit-transition: all 0.5s ease-in-out;
               -moz-transition: all 0.5s ease-in-out;
                -ms-transition: all 0.5s ease-in-out;
                 -o-transition: all 0.5s ease-in-out;
                    transition: all 0.5s ease-in-out;
        }


    /* global buttons */
        .menu-trigger-wrap {
            position:absolute;
            left:50px;
            top:60px;
            z-index:10;
        }

        .menu-trigger-open {
            position:fixed;
            margin:0;
            text-transform:uppercase;
        }

        .cart-hud-wrap {
            position:fixed;
            z-index:10;
            right:30px;
            top:40px;
        }

        .cart-hud {
            margin:0;
            padding:20px 30px;
            border:2px solid transparent;
            -webkit-transition   :border 0.25s;
            -moz-transition      :border 0.25s;
            -o-transition        :border 0.25s;
            -ms-transition       :border 0.25s;
            transition           :border 0.25s;
        }

        .cart-hud.active {
            border-color:#282828;
            background:#f3f3f3;
        }

        @media (max-width:600px) {
            .menu-trigger-open {
                left:20px;
                top:22px;
            }

            .cart-hud-wrap {
                top:8px;
                right:10px;
            }
        }

        @media (max-width:830px) {
            .menu-open .menu-trigger-open {
                display:none;
            }

            .menu-open .cart-hud-wrap {
                top:8px;
                right:10px;
            }
        }

        .cart-trigger {
            position:absolute;
            top:20px;
            right:20px;
            margin:0;
        }

        @media (max-width:600px) {
            .cart-trigger {
                top:10px;
                right:10px;
            }
        }

        @media (max-width:830px) {
            .menu-open .cart-trigger {
                top:10px;
                right:10px;
            }
        }

        .menu-trigger-open a,
        .cart-trigger a {
            color:#f3f3f3;
        }

        .menu-trigger-open a:hover,
        .cart-trigger a:hover {
            color:#fff;
            text-decoration:none;
        }

        .light-bg .menu-trigger-open a,
        .light-bg .cart-trigger a {
            color:#282828;
        }

        .light-bg .menu-trigger-open a:hover,
        .light-bg .cart-trigger a:hover {
            color:#000;
        }

        .menu-trigger-open .icon,
        .menu-trigger-close .icon {
            font-size:1.8em;
            vertical-align:middle;
            margin-right:5px;
        }

        .menu-trigger-close .icon {
            font-size:1.2em;
        }

        @media (max-width:400px) {
            .menu-trigger-open .menu-text {
                display:none;
            }
        }

        .cart-count {
            position:absolute;
            top:15px;
            left:10px;
            margin:0;
            background:rgba(255,255,255,0.7);
            color:#000;
            padding:3px 7px;
            border-radius:15px;
            font-size:0.7em;
        }

        .cart-count.empty {
            display:none;
        }

        .light-bg .cart-count {
            background:rgba(0,0,0,0.7);
            color:#fff;
        }

        /* cart hud */
            .cart-hud-message {
                margin-top:50px;
                letter-spacing:0.05em;
                text-align:center;
            }

            .cart-hud-message .added {
                text-transform:uppercase;
                padding-bottom:0.5em;
                margin-bottom:2em;
            }

            .cart-hud-message .border-below:after {
                background:#282828;
                bottom:-5px;
            }

            .cart-hud-message a {
                text-decoration:underline;
            }


    /* menu */
        .menu {
            position:fixed;
            z-index:1;
            top:0;
            bottom:0;
            left:0;
            width:230px;
            padding:50px;
            background:#fff;
        }

        @media (max-width:600px) {
            .menu {
                width:100%;
                padding:70px 20px 50px 20px;
            }
        }

        .menu-trigger-close {
            margin:10px 0 30px 0;
        }

        @media (max-width:600px) {
            .menu-trigger-close {
                position:absolute;
                left:20px;
                top:28px;
                margin-top:0;
            }
        }

        .menu a {
            text-transform:uppercase;
            color:#565656;
        }

        .menu a:hover {
            color:#000;
            text-decoration:none;
        }

        .menu ul,
        .menu li {
            margin:0;
            padding:0;
            list-style:none;
        }

        .menu li a {
            display:block;
            padding:15px 0;
            border-top:1px solid #bfbfbf;
        }

        .menu li:first-child a {
            border-top:none;
        }


    /* content */
        .content {
            margin:0;
            position:relative;
            z-index:5;
            overflow: auto;
            height:100%;
        }


/* components / modules */
    /* btn */
        .btn {
            text-transform:uppercase;
            text-align:center;
            margin-bottom:2em;
            -webkit-appearance:none;
            font-size:1em;
        }

        .btn a,
        input.btn {
            color:#fff;
            display:inline-block;
            border:1px solid #fff;
            padding:1em 3em;
            background:transparent;
            font-size:0.8em;
            letter-spacing:0.05em;
        }

        .btn a:hover,
        input.btn:hover {
            background:rgba(255,255,255,1);
            color:#000;
            text-decoration:none;
        }

        /* btn - light */
            .light-bg .btn a,
            .light-bg input.btn {
                color:#282828;
                border-color:#282828;
            }

            .light-bg .btn a:hover,
            .light-bg input.btn:hover {
                color:#fff;
                background:#282828;
            }

        /* btn - dark */
            .light-bg input.btn-dark {
                color:#fff;
                background:#282828;
                border-color:#282828;
            }

            .light-bg input.btn-dark:hover {
                color:#282828;
                background:#f3f3f3;
            }

        /* btn - borderless */
            .btn-borderless a,
            .light-bg .btn-borderless a {
                background:none;
                border:none;
                text-decoration:underline;
            }

    /* editorial blocks */
        .editorial {}

        .editorial p {
            letter-spacing:0.05em;
        }

        .editorial a {
            text-decoration:underline;
        }

        .editorial p:last-child {
            margin-bottom:0;
        }


    /* borders */
        .border-above,
        .border-below {
            position:relative;
        }

        .border-above:before,
        .border-below:after {
            content:"";
            position:absolute;
            left:50%;
            margin-left:-43px;
            top:0;
            height:1px;
            width:85px;
            background:rgba(255,255,255,0.5);
        }

        .light-bg .border-above:before,
        .light-bg .border-above:after {
            background:rgba(0,0,0,0.5);
        }

        .border-below:after {
            top:inherit;
            bottom:-20px;
        }


    /* site title */
        .site-title {
            padding:50px 0 20px 0;
            width:320px;
            min-height:117px;
            margin-left:auto;
            margin-right:auto;
        }

        @media (max-width:600px) {
            .site-title {
                padding-top:20px;
                min-height:87px;
                width:200px;
            }
        }

        @media (max-width:830px) {
            .menu-open .site-title {
                padding-top:20px;
                min-height:87px;
                width:200px;
            }
        }

        .site-title-svg {
            margin:0 auto;
            display:block;
        }

        .site-title-text {
            margin:0;
            padding:0;
            font-family:Baskerville, Georgia, serif;
            font-size:3.125em; /* 50 / 16 */
            color:#fff;
            text-align:center;
            -webkit-transition: color 0.25s;
               -moz-transition: color 0.25s;
                -ms-transition: color 0.25s;
                 -o-transition: color 0.25s;
                    transition: color 0.25s;
        }

        @media (max-width:600px) {
            .site-title-text {
                font-size:1.6em;
                padding-top:10px;
            }
        }

        @media (max-width:830px) {
            .menu-open .site-title-text {
                font-size:1.6em;
                padding-top:10px;
            }
        }

        .site-title-js-sticky {
            padding-bottom:50px;
        }

        .light-bg .site-title {
            color:#282828;
        }


    /* content blocks */
        .content-block {
            color:#fff;
            max-width:400px;
            margin:0 auto;
            padding-bottom:50px;
            position:relative;
            text-align:center;
        }

        @media (max-width:600px) {
            .content-block {
                padding-left:30px;
                padding-right:30px;
            }
        }

        @media (max-width:830px) {
            .menu-open .content-block {
                padding-left:30px;
                padding-right:30px;
            }
        }


        /* content block - header */
            .content-header {
                text-align:center;
            }

            /* override sticky for mobile */
            @media (max-width:600px) {
                .is-sticky .content-header {
                    position:relative !important;
                    top:0 !important;
                    z-index:1 !important;
                }
            }

            @media (max-width:830px) {
                .menu-open .is-sticky .content-header {
                    position:relative !important;
                    top:0 !important;
                    z-index:1 !important;
                }
            }

            /* content block - header - content type */
                .content-type {
                    font-family:Georgia, serif;
                    font-size:1.25em; /* 20 / 16 */
                    font-weight:bold;
                    font-style:italic;
                    margin:0;
                    padding:20px 0 0.5em 0;
                    position:relative;
                }

            /* content block - header - content title */
                .content-title {
                    margin:0;
                    padding:0 0 0.25em 0;
                    font-size:1.875em; /* 30 / 16 */
                    letter-spacing:0.05em;
                    font-weight:normal;
                    text-transform:uppercase;
                }

                @media (max-width:600px) {
                    .content-title {
                        font-size:1.4em;
                    }
                }

                @media (max-width:830px) {
                    .menu-open .content-title {
                        font-size:1.4em;
                    }
                }

                .content-title-solo {
                    padding-top:60px;
                    margin-bottom:40px;
                }

            /* content block - header - content title */
                .content-nav {
                    margin:0;
                    padding:1.25em 0;
                    letter-spacing:0.05em;
                }


        /* content block - detail */
            .content-detail {
                font-size:1.25em; /* 20 / 16 */
                line-height:1.5;
                letter-spacing:0.05em;
                padding-bottom:40px;
                margin-bottom:60px;
            }

            .content-detail p {
                font-size:1em;
            }

            @media (max-width:600px) {
                .content-detail p {
                   font-size:0.8em;
                }
            }

            @media (max-width:830px) {
                .menu-open .content-detail p {
                   font-size:0.8em;
                }
            }

            .content-detail blockquote {
                margin:50px -50px;
            }

            @media (max-width:500px) {
                .content-detail blockquote {
                    margin:50px 25px;
                }
            }

            .content-detail blockquote p {
                font-size:1.7em;
            }


    /* newsletter sign-up block */
        .newsletter-signup {
            border-top:1px solid #cacaca;
            border-bottom:1px solid #cacaca;
            margin-top:1em;
            padding:1em 0;
            max-width:760px;
            margin:0 auto;
        }

        /* override sticky for mobile */
            @media (max-width:870px) {
                .menu-open .is-sticky .newsletter-wrap {
                    position:static !important;
                }
            }

            @media (max-width:650px) {
                .is-sticky .newsletter-wrap {
                    position:static !important;
                }
            }

        .newsletter-signup p {
            float:left;
            width:50%;
            margin:0.6em 0 0 0;
            font-family:Georgia, serif;
            font-size:1.1em;
            font-weight:bold;
            font-style:italic;
        }

        .newsletter-signup form {
            float:right;
            width:50%;
            margin:0;
            text-align:right;
        }

        @media (max-width:650px) {
            .newsletter-signup p,
            .newsletter-signup form {
                float:none;
                width:100%;
                text-align:center;
                margin-bottom:0.5em;
            }
        }

        @media (max-width:870px) {
            .menu-open .newsletter-signup p,
            .menu-open .newsletter-signup form {
                float:none;
                width:100%;
                text-align:center;
                margin-bottom:0.5em;
            }
        }

        .newsletter-signup input[type="email"],
        .newsletter-signup input[type="submit"] {
            padding:1em;
            margin:0;
            background:transparent;
            color:#282828;
            border:1px solid #282828;
            font-size:0.875em; /* 14 / 16 */
        }

        .newsletter-signup input[type="email"] {
            border-right:none;
        }

        .newsletter-signup input[type="submit"] {
            text-transform:uppercase;
        }

        .newsletter-signup input[type="submit"]:hover {
            background:#282828;
            color:#fff;
        }

        @media (max-width:380px) {
            .newsletter-signup input[type="email"] {
                width:100%;
                margin-bottom:1em;
                border-right:1px solid #282828;
            }
        }

        @media (max-width:610px) {
            .menu-open .newsletter-signup input[type="email"] {
                width:100%;
                margin-bottom:1em;
                border-right:1px solid #282828;
            }
        }


/* pages / sections */

    /* generic page styles - may be overridden */
        .page {
            margin:0 auto;
            padding:0 20px;
            max-width:800px;
        }

    /* page - site intro */
        .site-bg {
            position:absolute;
            z-index:1;
            left:0;
            top:0;
            right:0;
            bottom:0;
            height:100%;
            width:100%;
            background:transparent no-repeat center top;
            background-size:cover;
        }

        .site-intro {
            padding-top:200px;
        }

        .site-intro .content-block {
            margin:50px auto;
            padding-bottom:30px;
        }

        .site-intro .content-block .content-type {
            padding-top:30px;
        }

        .site-intro .content-block:before,
        .site-intro .content-block:after {
            content:"";
            position:absolute;
            left:50%;
            margin-left:-43px;
            top:-20px;
            height:1px;
            width:85px;
            background:rgba(255,255,255,0.5);
        }

        .site-intro .content-block:after {
            top:auto;
        }

        .site-intro .btn {
            margin:30px auto;
        }

        .site-intro .btn a {
            font-size:1em;
            padding:1em 2em;
        }

        .site-intro .content-detail {
            padding-bottom:0;
        }


    /* page - shop */
        .page-shop {
            max-width:inherit;
            background:#f3f3f3;
            min-height:100%;
            padding-top:159px;
        }

        .page-shop-inner {
            max-width:inherit;
        }

        .page-shop .border-above:before {
            background:rgba(0,0,0,0.5);
        }

        /* categories list */
            .shop-categories {
                text-align:center;
                width:100%;
                margin:0 auto;
                padding-bottom:20px;
            }

            /* override sticky for mobile */
            @media (max-width:600px) {
                .is-sticky .shop-categories {
                    position:static !important;
                }
            }

            @media (max-width:830px) {
                .menu-open .is-sticky .shop-categories {
                    position:static !important;
                }
            }


            .shop-categories ul,
            .shop-categories li {
                margin:0;
                padding:0;
            }

            .shop-categories a {
                color:#282828;
            }

            .shop-categories a:hover {
                color:#000;
            }

            .shop-categories-list-container,
            .shop-categories .sticky-wrapper {
                display:none;
            }

            .shop-categories select {
                min-width:70%;
                margin:0.5em 0 1em 0;
            }

            @media (max-width:600px) {
                .shop-categories ul {
                    display:none;
                }

                .shop-categories-list-container,
                .shop-categories .sticky-wrapper {
                    text-align:center;
                    display:block;
                }

                .is-sticky > .shop-categories-list-container {
                    padding:0 20px;
                }
            }


